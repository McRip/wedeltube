!!! 5
%html
  %head
    %title
      Wedeltube
    = stylesheet_link_tag "reset-min.css"
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery-ui-1.8.13.custom.min.js"
    = javascript_include_tag "tag-it.js"
    = javascript_include_tag "flash.js"
    = javascript_include_tag "flash.js"
    = javascript_include_tag "/javascripts/fancybox/jquery.mousewheel-3.0.4.pack.js"
    = javascript_include_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.pack.js"
    = stylesheet_link_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.css"
    = csrf_meta_tag
  %body
    #navigation
      = render :partial => "shared/navigation"
    #wrapper
      #header
        #logo 
          = link_to image_tag("logo-240.png"), root_path

      #content
        = display_flash_messages
        = yield

      #footer
        2011 
        = link_to Wedeltube, root_path
        &bull;
        = link_to "Fachhochschule Wedel", "http://www.fh-wedel.de/"
        &bull;
        = link_to "Impressum", imprint_path
%h2 Registrieren
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email, "E-Mail-Adresse"
    = f.email_field :email
  .field
    = f.label :username, "Username"
    = f.text_field :username
  .field
    = f.label :name, "Name"
    = f.text_field :name
  .field
    = f.label :firstname, "Vorname"
    = f.text_field :firstname
  .field
    = f.label :password, "Passwort"
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Passwort Wiederholung"
    = f.password_field :password_confirmation
  .field
    =label_tag :ldap_user, "FH Wedel Benutzername"
    =text_field_tag :ldap_user, "", :size => 30
  .field
    =label_tag :ldap_pass, "FH Wedel Passwort"
    =password_field_tag :ldap_pass, "", :size => 30
  .field
    = f.submit "Jetzt Registrieren"
= render :partial => "devise/shared/links"

= semantic_form_for Comment.new, :url => video_comments_url(video) do |form|
  = form.inputs do
    = form.input :comment, :label => "Dein Kommentar"
  = form.buttons do
    = form.commit_button :button_html => { :value => "Absenden", :class => "primary", :disable_with => 'wird gespeichertâ€¦' }


:javascript
  $(document).ready(function() {
    comment_form = $("#new_comment");
    comment_form.submit(function(event) {
      event.preventDefault();
      $.post(comment_form[0].action, comment_form.serialize(), function(data) {
        $("textarea", comment_form)[0].value = "";
        $("#commentslist").append(data);
        $("#comment_submit").removeAttr('disabled').attr('value', 'Absenden');
      }, "script");
    });
  });